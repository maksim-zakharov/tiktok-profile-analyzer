{
  "manifest_version": 2,
  "name": "Tiktok Profile Analyzer",
  "description": "This extension will analyze a Tiktok profile using API",
  "version": "1.0.1",
  "author": "Maksim Zakharov",
  "icons": {"128": "images/icon_128x128.png"},
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["content/content.js"],
      "css": ["content/styles.css"]
    }
  ],
  "background": {
    "scripts": ["./background.js"]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon_128x128.png"
    }
  },
  "start_url": ".",
  "permissions": [
    "tabs",
    "storage",
    "*://*.tiktok.com/*"
  ]
}
