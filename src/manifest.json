{
  "manifest_version": 2,
  "name": "Tiktok Profile Analyzer",
  "description": "This extension will analyze a Tiktok profile using API",
  "version": "1.0.3",
  "author": "Maksim Zakharov",
  "icons": {
    "128": "images/icon_128x128.png"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.tiktok.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/styles.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "options_page": "./options.html",
  "default_locale": "en",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon_128x128.png"
    }
  },
  "start_url": ".",
  "permissions": [
    "storage",
    "*://*.tiktok.com/*"
  ]
}
